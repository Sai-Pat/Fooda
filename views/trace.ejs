<body>
  <!-- Language Selection -->
  <div class="language-selector">
    <button onclick="changeLanguage('en')">English</button>
    <button onclick="changeLanguage('hi')">Hindi</button>
    <button onclick="changeLanguage('mr')">Marathi</button>
    <button onclick="changeLanguage('te')">Telugu</button>
    <button onclick="changeLanguage('ta')">Tamil</button>
    <button onclick="changeLanguage('kn')">Kannada</button>
  </div>

  <div class="container">
    <h1 class="translate" data-key="productOriginDetails">Product Origin Details</h1>

    <!-- Farmer Details -->
    <div class="section">
      <h2 class="translate" data-key="farmerDetails">Farmer Details</h2>
      <p><strong class="translate" data-key="farmerName">Name:</strong> <span class="translate" data-key="farmerNameValue">Balu</span></p>
      <p><strong class="translate" data-key="farmerLocation">Location:</strong> <%= farmer.location %></p>
      <p><strong class="translate" data-key="farmSize">Farm Size:</strong> <%= farmer.farmSize %> Acres</p>
      <p><strong class="translate" data-key="certification">Certification:</strong> <%= farmer.npopCertification ? 'NPOP Certified' : 'Standard' %></p>
    </div>

    <!-- Products Information -->
    <div class="section">
      <h2 class="translate" data-key="products">Products</h2>
      <% if (farmer.products.length > 0) { %>
        <ul>
          <% farmer.products.forEach(function(product) { %>
            <li>
              <strong class="translate" data-key="productName">Product Name:</strong> 
              <span class="product-name" data-product="<%= product.productName %>"><%= product.productName %></span><br>
              <strong class="translate" data-key="quantity">Quantity:</strong> <%= product.productQuantity %> Quintals<br>
              <strong class="translate" data-key="growthPeriod">Growth Period:</strong> <%= product.daysToGrow %> Days
            </li>
          <% }); %>
        </ul>
      <% } else { %>
        <p class="translate" data-key="noProducts">No products found.</p>
      <% } %>
    </div>

    <!-- Fertilizers Information -->
    <div class="section">
      <h2 class="translate" data-key="fertilizerUsed">Fertilizer Used</h2>
      <% if (pesticide.pesticides.length > 0) { %>
        <ul>
          <% pesticide.pesticides.forEach(function(p) { %>
            <li>
              <strong class="translate" data-key="productName">Name:</strong> 
              <span class="pesticide-name" data-pesticide="<%= p.name %>"><%= p.name %></span><br>
              <strong class="translate" data-key="quantity">Quantity:</strong> <%= p.quantity %> Kgs/ltr
            </li>
          <% }); %>
        </ul>
      <% } else { %>  
        <p class="translate" data-key="noPesticides">No pesticide data available.</p>
      <% } %>
    </div>

    <!-- Distributor Details -->
    <div class="section">
      <h2 class="translate" data-key="distributorDetails">Distributor Details</h2>
      <p><strong class="translate" data-key="vendorName">Vendor Name:</strong> <span class="translate" data-key="vendorNameValue">Mora</span></p>
      <p><strong class="translate" data-key="location">Location:</strong> <%= distributor.location %></p>
      <p><strong class="translate" data-key="productName">Product Name:</strong> <%= distributor.productName %></p>
      <p><strong class="translate" data-key="pickingDate">Picking Date:</strong> <%= new Date(distributor.pickingDate).toLocaleDateString() %></p>
    </div>
  </div>
